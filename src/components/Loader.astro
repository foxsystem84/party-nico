<div class="preloader">
  <img src="/images/ufo.png" alt="Imagen de preloader" />
  <img src="/images/loading.gif" class="spinner" />
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const loader = document.querySelector(".preloader") as HTMLDivElement;
    const content = document.querySelector(".content") as HTMLDivElement;
    const content2 = document.querySelector(".content2") as HTMLDivElement;
    window.scrollTo(0, 0);
    setTimeout(function () {
      content.style.display = "block";
      content2.style.display = "block";
      const target = document.getElementById("contenido");
      const offset = content.offsetHeight - content.offsetTop;
      //console.log(offset);
      window.scrollTo({
        left: 0,
        top: offset,
        behavior: "smooth",
      });
      loader.style.display = "none";
    }, 2000);
  });
</script>
<style>
  .preloader {
    position: relative;
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
